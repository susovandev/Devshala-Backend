    <script src="/socket.io/socket.io.js"></script>

<script>
      const article = document.querySelector('article[data-blog-id]');
      const blogId = article?.dataset.blogId;

      if (!blogId) {
        console.warn('Blog ID not found, skipping view tracking');
      } else {
        const socket = io();

        socket.on('connect', () => {
          socket.emit('joinBlog', blogId);
        });

        let lastViews = Number(
          document.getElementById('blog-views')?.textContent || 0
        );

        socket.on('viewsUpdated', data => {
          if (typeof data.views !== 'number') return;

          const viewsEl = document.getElementById('blog-views');
          const wrapper = document.getElementById('views-wrapper');
          const icon = document.getElementById('views-icon');

          if (data.views > lastViews) {
            wrapper.classList.add('views-animate');
            icon.classList.add('icon-animate');

            setTimeout(() => {
              wrapper.classList.remove('views-animate');
              icon.classList.remove('icon-animate');
            }, 5000);
          }

          viewsEl.textContent = data.views;
          lastViews = data.views;
        });

        fetch(`/blogs/${blogId}/views`, { method: 'POST' }).catch(console.error);
      }
</script>

<script>
  const likeBtn = document.getElementById("likeBtn");
  const bookmarkBtn = document.getElementById("bookmarkBtn");

  // LIKE
  likeBtn?.addEventListener("click", async () => {
    const blogId = likeBtn.dataset.blogId;
    const res = await fetch(`/blogs/${blogId}/like`, { method: "POST" });
    const data = await res.json();

    const likeIcon = document.getElementById("likeIcon");
    const likeCount = document.getElementById("likeCount");
    const totalLikes = document.getElementById("total-likes");

    likeIcon.className = data.liked
      ? "fa-solid fa-heart text-red-600"
      : "fa-regular fa-heart text-red-600";

    likeCount.textContent = data.likes;
    totalLikes.textContent = Number(totalLikes.textContent) + (data.liked ? 1 : -1);
  });

  // BOOKMARK
  bookmarkBtn?.addEventListener("click", async () => {
    const blogId = bookmarkBtn.dataset.blogId;
    const res = await fetch(`/blogs/${blogId}/bookmark`, { method: "POST" });
    const data = await res.json();

    const bookmarkIcon = document.getElementById("bookmarkIcon");
    const bookmarkText = bookmarkBtn.querySelector("span");
    const totalBookmarks = document.getElementById("total-bookmarks");

    bookmarkIcon.className = data.bookmarked
      ? "fa-solid fa-bookmark text-indigo-600"
      : "fa-regular fa-bookmark text-indigo-600";

    bookmarkText.textContent = data.bookmarked ? "Saved" : "Save";

    totalBookmarks.textContent = Number(totalBookmarks.textContent) + (data.bookmarked ? 1 : -1);

  });
</script>

<script>
  const commentForm = document.getElementById("commentForm");
  const commentInput = document.getElementById("commentInput");
  const commentsList = document.getElementById("commentsList");
  const submitBtn = commentForm?.querySelector("button");

  commentForm?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const content = commentInput.value.trim();
    if (!content) return;

    submitBtn.disabled = true;

    try {
      const blogId = "<%= blog._id %>";

      const tempId = `temp-${Date.now()}`;
commentsList.insertAdjacentHTML(
  "afterbegin",
  `<div id="${tempId}" class="bg-gray-100 p-4 rounded-lg opacity-70">
     Posting comment...
   </div>`
);

      const res = await fetch(`/blogs/${blogId}/comments`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "Accept": "application/json"
        },
        body: JSON.stringify({ content })
      });

      if (!res.ok) {
        if (res.status === 401) {
          window.location.href = "/users/auth/login";
          return;
        }
        throw new Error("Comment failed");
      }

      const data = await res.json();
      document.getElementById(tempId)?.remove();

      const commentHTML = `
        <div class="bg-gray-50 p-4 rounded-lg">
          <div class="flex items-center gap-2 text-sm text-gray-600">
            <img
              src="${data.avatar}"
              class="w-6 h-6 rounded-full"
            />
            <span class="font-medium">${data.username}</span>
            <span>â€¢ just now</span>
            <span class="px-2 py-0.5 rounded-full text-xs bg-slate-100 text-slate-600">
              ${data.role}
            </span>
          </div>

          <p class="mt-2 text-sm text-gray-700">
            ${data.content}
          </p>
        </div>
      `;

      commentsList.insertAdjacentHTML("afterbegin", commentHTML);

      commentInput.value = "";

    } catch (err) {
      console.error(err);
      alert("Failed to post comment");
    } finally {
      submitBtn.disabled = false;
    }
  });
</script>
