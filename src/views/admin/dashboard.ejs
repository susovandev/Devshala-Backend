<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs", {title}) %>
  <body class="bg-gray-100 min-h-screen">
    <!-- WRAPPER -->
    <div class="flex min-h-screen">
      <!-- SIDEBAR -->
      <%- include("../partials/admin/dashboard/sidebar.ejs", {admin}) %>

      <!-- MAIN AREA -->
      <div class="flex-1 flex flex-col">
        <!-- TOP BAR -->
        <%- include("../partials/admin/dashboard/topbar.ejs", {notificationsCount}) %>

        <!-- MAIN CONTENT -->
        <main class="flex-1 p-6">
          <!-- STATS -->
          <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
            <div class="bg-white p-6 rounded-xl shadow">
              <p class="text-sm text-gray-500">Publishers</p>
              <p class="text-2xl font-bold"><%= stats.publishers %></p>
            </div>

            <div class="bg-white p-6 rounded-xl shadow">
              <p class="text-sm text-gray-500">Users</p>
              <p class="text-2xl font-bold"><%= stats.users %></p>
            </div>

            <div class="bg-white p-6 rounded-xl shadow">
              <p class="text-sm text-gray-500">Blogs</p>
              <p class="text-2xl font-bold"><%= stats.blogs %></p>
            </div>

            <div class="bg-white p-6 rounded-xl shadow">
              <p class="text-sm text-gray-500">Pending Reviews</p>
              <p class="text-2xl font-bold text-red-500"><%= stats.pending %></p>
            </div>
          </div>
        </main>

        <!-- FOOTER -->
        <%- include("../partials/admin/dashboard/footer.ejs", {admin}) %>
      </div>
    </div>
  </body>
</html>
