<!DOCTYPE html>
<html lang="en">
<%- include("../../partials/head.ejs", { title }) %>

<body class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 relative overflow-hidden">
  <%- include("../../partials/toast.ejs") %>

  <!-- Subtle animated background -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute -top-32 -left-32 w-96 h-96 bg-indigo-200 rounded-full blur-3xl opacity-30 animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-purple-200 rounded-full blur-3xl opacity-30 animate-pulse"></div>
  </div>

  <div class="relative z-10 min-h-screen flex items-center justify-center px-4">
    <div class="w-full max-w-lg bg-white/90 backdrop-blur rounded-3xl shadow-xl border border-gray-200">

      <!-- HEADER -->
      <div class="px-8 py-7 border-b">
        <h1 class="text-2xl font-semibold text-gray-900 tracking-tight">
          Change Password
        </h1>
        <p class="text-sm text-gray-500 mt-1">
          Keep your account secure by updating your password
        </p>
      </div>

      <!-- FORM -->
      <form action="/authors/profile/change-password" method="POST" class="px-8 py-8 space-y-6">

        <!-- CURRENT PASSWORD -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Current password
          </label>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
              <i class="fa-solid fa-key"></i>
            </span>
            <input
              type="password"
              name="currentPassword"
              required
              placeholder="Enter current password"
              class="w-full pl-10 pr-4 py-3 rounded-xl bg-gray-50 border border-gray-200 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition"
            />
          </div>
        </div>

        <!-- NEW PASSWORD -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            New password
          </label>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
              <i class="fa-solid fa-lock"></i>
            </span>
            <input
              type="password"
              name="newPassword"
              required
              placeholder="Create a strong password"
              class="w-full pl-10 pr-4 py-3 rounded-xl bg-gray-50 border border-gray-200 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition"
            />
          </div>
          <p class="mt-1 text-xs text-gray-500">
            Minimum 8 characters recommended
          </p>
        </div>

        <!-- CONFIRM PASSWORD -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Confirm new password
          </label>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
              <i class="fa-solid fa-check"></i>
            </span>
            <input
              type="password"
              name="confirmPassword"
              required
              placeholder="Re-enter new password"
              class="w-full pl-10 pr-4 py-3 rounded-xl bg-gray-50 border border-gray-200 text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition"
            />
          </div>
        </div>

        <!-- ACTIONS -->
        <div class="flex items-center justify-between pt-6">
          <a
            href="/users/profile"
            class="text-sm text-gray-500 hover:text-gray-700 transition"
          >
            ← Back to profile
          </a>

          <button
            type="submit"
            class="inline-flex items-center gap-2 bg-indigo-600 text-white px-6 py-3 rounded-xl text-sm font-medium hover:bg-indigo-700 shadow-md hover:shadow-lg transition"
          >
            <i class="fa-solid fa-shield-halved"></i>
            Update password
          </button>
        </div>
      </form>

      <!-- FOOTER -->
      <div class="px-8 py-5 bg-gray-50 border-t rounded-b-3xl">
        <p class="text-xs text-gray-500 flex items-center gap-2">
          <i class="fa-solid fa-lock"></i>
          You’ll be signed out after changing your password for security reasons.
        </p>
      </div>
    </div>
  </div>

  <%- include("../../partials/toast-script.ejs") %>
  <%- include("../../partials/background.ejs") %>
</body>
</html>
