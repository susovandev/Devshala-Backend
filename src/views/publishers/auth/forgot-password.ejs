<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/head.ejs', { title }) %>

  <body class="bg-gray-50">

    <!-- GLOBAL TOAST (flash messages) -->
    <%- include('../../partials/toast.ejs') %>

    <div class="min-h-screen flex items-center justify-center px-4">
      <div class="w-full max-w-md">

        <!-- Brand -->
        <div class="mb-8 text-center">
          <h1 class="text-3xl font-bold text-gray-900">Publisher Panel</h1>
          <p class="mt-2 text-sm text-gray-500">
            Reset your Publisher password
          </p>
        </div>

        <!-- Card -->
        <div class="rounded-2xl bg-white p-8 shadow-lg border border-gray-100">
          <form
            action="/publishers/auth/forgot-password"
            method="POST"
            class="space-y-6"
          >

            <!-- Info -->
            <p class="text-sm text-gray-600">
              Enter your registered email address. We’ll send you a password
              reset link.
            </p>

            <!-- Email -->
            <div>
              <label class="block text-sm font-medium text-gray-700">
                Email address
              </label>
              <input
                type="email"
                name="email"
                required
                placeholder="publisher@example.com"
                class="mt-1 w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm focus:border-indigo-500 focus:ring-indigo-500"
              />
            </div>

            <!-- Submit -->
            <button
              type="submit"
              class="w-full rounded-lg bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-indigo-700 transition"
            >
              Send reset link
            </button>

            <!-- Back to login -->
            <div class="text-center">
              <a
                href="/publishers/auth/login"
                class="text-sm font-medium text-indigo-600 hover:text-indigo-500"
              >
                ← Back to login
              </a>
            </div>
          </form>
        </div>

        <!-- Footer -->
        <p class="mt-6 text-center text-xs text-gray-400">
          © <%= new Date().getFullYear() %> Your Company. All rights reserved.
        </p>
      </div>
    </div>

    <!-- Toast Script -->
    <%- include('../../partials/toast-script.ejs') %>
  </body>
</html>
