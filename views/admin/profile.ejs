<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs", {title}) %>

  <body class="bg-gray-100 min-h-screen">
    <!-- TOAST START -->
    <%- include("../partials/toast.ejs") %>

<!-- WRAPPER -->
    <div class="flex min-h-screen">
      <!-- SIDEBAR  START -->
  <%- include("./components/sidebar.ejs", {currentPath, admin, pageTitle}) %>


      <!-- MAIN AREA -->
<div class="flex-1 flex flex-col">
        <!-- TOP BAR -->
<%- include("./components/main-header.ejs", {admin, totalUnreadNotifications, totalNotifications, notifications}) %>

        <!-- MAIN CONTENT -->
      <main class="flex-1 p-8">
  <div class="max-w-6xl mx-auto space-y-8">

    <!-- PAGE INTRO -->
    <div>
      <h1 class="text-3xl font-bold text-gray-900">My Profile</h1>
      <p class="text-sm text-gray-500 mt-1">
        Manage your personal information and account details
      </p>
    </div>

    <!-- CONTENT GRID -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

      <!-- PROFILE SUMMARY -->
      <div class="bg-white rounded-2xl border shadow-sm p-6">
        <div class="flex flex-col items-center text-center">

          <img
  src="<%= admin.avatarUrl?.url 
    ? admin.avatarUrl.url 
    : 'https://ui-avatars.com/api/?name=' + admin.username + '&background=0D8ABC&color=fff' %>"
  class="w-32 h-32 rounded-full object-cover border"
/>

          <h3 class="mt-4 text-lg font-semibold"><%= admin.username %></h3>
          <p class="text-sm text-gray-500"><%= admin.email %></p>

          <span class="mt-2 px-3 py-1 text-xs rounded-full bg-indigo-100 text-indigo-600">
            <%= admin.role %>
          </span>

          <% if (admin.isEmailVerified) { %>
            <span class="mt-3 text-xs bg-green-100 text-green-700 px-3 py-1 rounded-full">
              Email Verified
            </span>
          <% } else { %>
            <span class="mt-3 text-xs bg-yellow-100 text-yellow-700 px-3 py-1 rounded-full">
              Email Not Verified
            </span>
          <% } %>

          <form
            action="/admins/profile/avatar"
            method="POST"
            enctype="multipart/form-data"
            class="w-full mt-6 space-y-3"
          >
            <input
              type="file"
              name="avatar"
              class="w-full text-sm text-gray-500
                     file:mr-4 file:py-2 file:px-4
                     file:rounded-lg file:border-0
                     file:bg-indigo-50 file:text-indigo-600
                     hover:file:bg-indigo-100"
            />

            <button
              class="w-full bg-indigo-600 text-white py-2 rounded-lg text-sm font-medium hover:bg-indigo-700"
            >
              Update Avatar
            </button>
          </form>

          <% if (
            admin.socialLinks?.github ||
            admin.socialLinks?.linkedin ||
            admin.socialLinks?.twitter
          ) { %>

            <div class="w-full mt-6 pt-5 border-t">
              <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">
                Social Profiles
              </p>

              <div class="flex justify-center gap-4">

                <% if (admin.socialLinks?.github) { %>
                  <a
                    href="<%= admin.socialLinks.github %>"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 flex items-center justify-center rounded-lg border
                           text-gray-600 hover:text-black hover:border-gray-300
                           hover:bg-gray-50 transition"
                    title="GitHub"
                  >
                    <i class="fa-brands fa-github text-lg"></i>
                  </a>
                <% } %>

                <% if (admin.socialLinks?.linkedin) { %>
                  <a
                    href="<%= admin.socialLinks.linkedin %>"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 flex items-center justify-center rounded-lg border
                           text-blue-600 hover:bg-blue-50 hover:border-blue-200 transition"
                    title="LinkedIn"
                  >
                    <i class="fa-brands fa-linkedin-in text-lg"></i>
                  </a>
                <% } %>

                <% if (admin.socialLinks?.twitter) { %>
                  <a
                    href="<%= admin.socialLinks.twitter %>"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-10 h-10 flex items-center justify-center rounded-lg border
                           text-sky-500 hover:bg-sky-50 hover:border-sky-200 transition"
                    title="Twitter"
                  >
                    <i class="fa-brands fa-x-twitter text-lg"></i>
                  </a>
                <% } %>

              </div>
            </div>

          <% } %>

        </div>
      </div>

      <!-- PROFILE FORM -->
      <div class="lg:col-span-2 bg-white rounded-2xl border shadow-sm">

        <!-- HEADER -->
        <div class="px-8 py-6 border-b">
          <h2 class="text-lg font-semibold text-gray-900">
            Personal Information
          </h2>
          <p class="text-sm text-gray-500 mt-1">
            Update how your profile appears to other users
          </p>
        </div>

        <form action="/admins/profile" method="POST" class="divide-y">

          <!-- USERNAME -->
          <div class="px-8 py-6 grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
              <p class="text-sm font-medium text-gray-900">Username</p>
              <p class="text-sm text-gray-500">
                Your public display name
              </p>
            </div>

            <div class="md:col-span-2">
              <input
                type="text"
                name="username"
                value="<%= admin.username %>"
                class="w-full rounded-lg border-gray-300
                       focus:ring-indigo-500 focus:border-indigo-500"
              />
            </div>
          </div>

          <!-- BIO -->
          <div class="px-8 py-6 grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
              <p class="text-sm font-medium text-gray-900">Bio</p>
              <p class="text-sm text-gray-500">
                Short introduction about you
              </p>
            </div>

            <div class="md:col-span-2">
              <textarea
                name="bio"
                rows="4"
                class="w-full rounded-lg border-gray-300
                       focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="Write something about yourself..."
              ><%= admin.bio || '' %></textarea>
            </div>
          </div>

          <!-- SOCIAL LINKS -->
          <div class="px-8 py-6 grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
              <p class="text-sm font-medium text-gray-900">Social Links</p>
              <p class="text-sm text-gray-500">
                Add links to your social profiles
              </p>
            </div>

            <div class="md:col-span-2 space-y-3">
              <input
                type="url"
                name="socialLinks.github"
                value="<%= admin.socialLinks?.github || '' %>"
                placeholder="GitHub profile URL"
                class="w-full rounded-lg border-gray-300
                       focus:ring-indigo-500 focus:border-indigo-500"
              />
              <input
                type="url"
                name="socialLinks.linkedin"
                value="<%= admin.socialLinks?.linkedin || '' %>"
                placeholder="LinkedIn profile URL"
                class="w-full rounded-lg border-gray-300
                       focus:ring-indigo-500 focus:border-indigo-500"
              />
              <input
                type="url"
                name="socialLinks.twitter"
                value="<%= admin.socialLinks?.twitter || '' %>"
                placeholder="Twitter profile URL"
                class="w-full rounded-lg border-gray-300
                       focus:ring-indigo-500 focus:border-indigo-500"
              />
            </div>
          </div>

          <!-- META INFO -->
          <div class="px-8 py-6 grid grid-cols-1 md:grid-cols-3 gap-6 bg-gray-50">
            <div>
              <p class="text-sm font-medium text-gray-900">Account Info</p>
              <p class="text-sm text-gray-500">
                Read-only system information
              </p>
            </div>

            <div class="md:col-span-2 grid grid-cols-2 gap-6 text-sm">
              <div>
                <p class="text-gray-500">Status</p>
                <p class="font-medium text-gray-900"><%= admin.status %></p>
              </div>
              <div>
                <p class="text-gray-500">Joined</p>
                <p class="font-medium text-gray-900">
                  <%= admin.createdAt.toDateString() %>
                </p>
              </div>
            </div>
          </div>

          <!-- SECURITY / PASSWORD -->
<div class="px-8 py-6 grid grid-cols-1 md:grid-cols-3 gap-6 bg-white">
  <div>
    <p class="text-sm font-medium text-gray-900">Security</p>
    <p class="text-sm text-gray-500">
      Manage your account security
    </p>
  </div>

  <div class="md:col-span-2">
    <a
      href="/admins/profile/change-password"
      class="flex items-center justify-between rounded-xl border
             px-5 py-4 hover:bg-gray-50 transition group"
    >
      <div class="flex items-center gap-4">
        <div
          class="w-10 h-10 rounded-lg bg-indigo-100
                 flex items-center justify-center text-indigo-600"
        >
          <i class="fa-solid fa-lock"></i>
        </div>

        <div>
          <p class="text-sm font-medium text-gray-900">
            Change Password
          </p>
          <p class="text-xs text-gray-500">
            Update your account password
          </p>
        </div>
      </div>

      <i
        class="fa-solid fa-chevron-right text-gray-400
               group-hover:text-gray-600"
      ></i>
    </a>
  </div>
</div>


          <!-- ACTION -->
          <div class="px-8 py-5 flex justify-end bg-white">
            <button
              class="inline-flex items-center gap-2 bg-indigo-600 text-white
                     px-6 py-2 rounded-lg font-medium
                     hover:bg-indigo-700 transition"
            >
              Save Changes
            </button>
          </div>

        </form>
      </div>

    </div>
  </div>
</main>

<%- include("./components/footer.ejs", {admin}) %>
      </div>
    </div>


    <%- include('../partials/toast-script.ejs') %>
    <%- include("./components/icon-hover.ejs") %>
    <%- include("./components/back-button.ejs") %>
    <%- include("./components/real-time.ejs") %>

  </body>
</html>