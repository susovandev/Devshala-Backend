<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs", {title: 'DevShala | Blogs'}) %>

<body class="bg-gray-50 text-gray-800">

  <!-- ================= HEADER ================= -->
  <header class="sticky top-0 z-50 bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex items-center justify-between h-16">

        <!-- ========== LEFT: LOGO / COMPANY NAME ========== -->
        <div class="flex items-center">
          <a href="/" class="text-2xl font-bold text-indigo-600">
            DevShala
          </a>
        </div>

        <!-- ========== CENTER: NAVIGATION ========== -->
        <%- include("./partials/navigation.ejs") %>

        <!-- ========== RIGHT: AUTH / USER ACTIONS ========== -->
        <div class="flex items-center space-x-4">

          <% if (user) { %>
            <!-- Notifications -->
            <div class="relative group">
              <button class="relative p-2 rounded-full hover:bg-gray-100 transition">
                <i class="fa-regular fa-bell text-lg"></i>
                <!-- Notification badge -->
                <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs px-1.5 rounded-full">
                  3
                </span>
              </button>

              <!-- Notification Dropdown -->
              <div
                class="absolute right-0 mt-2 w-72 bg-white border border-gray-200 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition"
              >
                <div class="p-4 text-sm font-semibold border-b">
                  Notifications
                </div>

                <ul class="max-h-60 overflow-y-auto">
                  <li class="px-4 py-3 hover:bg-gray-50 text-sm">
                    New blog approval request
                  </li>
                  <li class="px-4 py-3 hover:bg-gray-50 text-sm">
                    Admin approved your blog
                  </li>
                </ul>

                <div class="p-3 text-center border-t">
                  <a href="/notifications" class="text-indigo-600 text-sm font-medium">
                    View all
                  </a>
                </div>
              </div>
            </div>

            <!-- User Profile -->
            <div class="relative group">
              <button class="flex items-center space-x-2">
                <img
                  src="<%= user.avatar || '/images/default-avatar.png' %>"
                  alt="Profile"
                  class="w-8 h-8 rounded-full object-cover"
                />
                <i class="fa-solid fa-chevron-down text-xs"></i>
              </button>

              <!-- Profile Dropdown -->
              <div
                class="absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition"
              >
                <a href="/users/profile" class="block px-4 py-2 text-sm hover:bg-gray-50">
                  Profile
                </a>
                <a href="/users/dashboard" class="block px-4 py-2 text-sm hover:bg-gray-50">
                  Dashboard
                </a>
                <form action="/users/auth/logout" method="POST">
                  <button
                    type="submit"
                    class="w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-gray-50"
                  >
                    Logout
                  </button>
                </form>
              </div>
            </div>

          <% } else { %>
            <!-- Login / Register -->
            <a
              href="/users/auth/login"
              class="px-4 py-2 text-sm font-medium text-indigo-600 border border-indigo-600 rounded-md hover:bg-indigo-600 hover:text-white transition"
            >
              Login
            </a>
          <% } %>

        </div>
      </div>
    </div>
  </header>
  <!-- =============== END HEADER =============== -->
<!-- ================= MAIN SECTION ================= -->
<main class="max-w-7xl mx-auto px-6 py-10 grid grid-cols-1 lg:grid-cols-4 gap-8">

  <!-- ===== LEFT SIDEBAR (FILTERS) ===== -->
  <aside class="lg:col-span-1 space-y-6">

    <!-- Search -->
    <form method="GET" action="/" class="bg-white p-4 rounded-xl shadow-sm">
      <h3 class="font-semibold mb-3">Search Blogs</h3>
      <input
        type="text"
        name="search"
        value="<%= filters.search %>"
        placeholder="Search by title or content"
        class="w-full border rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500"
      />
    </form>

    <!-- Categories -->
    <div class="bg-white p-4 rounded-xl shadow-sm">
      <h3 class="font-semibold mb-3">Categories</h3>
      <ul class="space-y-2">
        <% categories.forEach(cat => { %>
          <li>
            <a
              href="/?category=<%= cat.name %>"
              class="flex justify-between text-sm hover:text-indigo-600"
            >
              <span><%= cat.name %></span>
              <span class="text-gray-400">(<%= cat.count %>)</span>
            </a>
          </li>
        <% }) %>
      </ul>
    </div>

    <!-- Tags -->
    <div class="bg-white p-4 rounded-xl shadow-sm">
      <h3 class="font-semibold mb-3">Tags</h3>
      <div class="flex flex-wrap gap-2">
        <% tags.forEach(tag => { %>
          <a
            href="/?tag=<%= tag %>"
            class="px-3 py-1 text-xs rounded-full bg-gray-100 hover:bg-indigo-100 hover:text-indigo-600 transition"
          >
            #<%= tag %>
          </a>
        <% }) %>
      </div>
    </div>

  </aside>

  <!-- ===== BLOG LISTING ===== -->
  <section class="lg:col-span-3 space-y-6">

    <!-- Section Title -->
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold">üî• Popular Blogs</h1>
      <span class="text-sm text-gray-500">
        Showing <%= blogs.length %> blogs
      </span>
    </div>

    <!-- Blog Cards -->
    <% blogs.forEach(blog => { %>
      <article class="bg-white rounded-xl shadow-sm hover:shadow-md transition overflow-hidden">

        <div class="p-6 space-y-4">

          <!-- Title -->
          <a href="/blogs/<%= blog.slug %>">
            <h2 class="text-xl font-semibold hover:text-indigo-600 transition">
              <%= blog.title %>
            </h2>
          </a>

          <!-- Meta -->
          <div class="flex items-center text-sm text-gray-500 gap-4 flex-wrap">
            <div class="flex items-center gap-2">
              <img
                src="<%= blog.author.avatar || '/images/default-avatar.png' %>"
                class="w-6 h-6 rounded-full"
              />
              <span><%= blog.author.username %></span>
            </div>
            <span>‚Ä¢ <%= new Date(blog.createdAt).toDateString() %></span>
            <span>‚Ä¢ ‚ù§Ô∏è <%= blog.likesCount %></span>
            <span>‚Ä¢ üí¨ <%= blog.commentsCount %></span>
            <span>‚Ä¢ üëÄ <%= blog.views %></span>
          </div>

          <!-- Excerpt -->
          <p class="text-gray-600 text-sm line-clamp-3">
            <%= blog.excerpt %>
          </p>

          <!-- Tags -->
          <div class="flex flex-wrap gap-2">
            <% blog.tags.forEach(tag => { %>
              <span class="text-xs bg-indigo-50 text-indigo-600 px-2 py-1 rounded-full">
                #<%= tag %>
              </span>
            <% }) %>
          </div>

        </div>
      </article>
    <% }) %>

    <!-- ===== PAGINATION ===== -->
    <div class="flex justify-center items-center gap-2 pt-6">

      <% if (pagination.currentPage > 1) { %>
        <a
          href="/?page=<%= pagination.currentPage - 1 %>"
          class="px-3 py-2 text-sm border rounded hover:bg-gray-100"
        >
          Prev
        </a>
      <% } %>

      <% for (let i = 1; i <= pagination.totalPages; i++) { %>
        <a
          href="/?page=<%= i %>"
          class="px-3 py-2 text-sm border rounded
            <%= pagination.currentPage === i ? 'bg-indigo-600 text-white' : 'hover:bg-gray-100' %>"
        >
          <%= i %>
        </a>
      <% } %>

      <% if (pagination.currentPage < pagination.totalPages) { %>
        <a
          href="/?page=<%= pagination.currentPage + 1 %>"
          class="px-3 py-2 text-sm border rounded hover:bg-gray-100"
        >
          Next
        </a>
      <% } %>

    </div>

  </section>
</main>
<!-- ================= END MAIN ================= -->

<!-- ================= FOOTER ================= -->
<%- include("./partials/footer.ejs") %>
<!-- ================= END FOOTER ================= -->

</body>
</html>

