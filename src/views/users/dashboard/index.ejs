<!DOCTYPE html>
<html lang="en">
  <!-- HEAD START -->
  <%- include("../../partials/head.ejs", {title}) %>

  <body class="bg-gray-100 min-h-screen">
    <!-- TOAST START -->
    <%- include("../../partials/toast.ejs") %>
    
    <!-- WRAPPER -->
    <div class="flex min-h-screen">
      <!-- SIDEBAR  START -->
      <%- include("../../partials/sidebar/index.ejs", {
        sidebarTitle: 'UserPanel',
        user,
      }) %>


      <!-- MAIN AREA -->
<div class="flex-1 flex flex-col">
        <!-- TOP BAR -->
        <header class="bg-white shadow-sm px-6 py-4 flex justify-between items-center">
        <h2 class="text-xl font-semibold text-gray-800">
          Dashboard
        </h2>

        <!-- NOTIFICATION -->
        <div class="relative">
          <button class="focus:outline-none">
            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" stroke-width="2"
              viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11
                a6.002 6.002 0 00-4-5.659V4a2 2 0 10-4 0v1.341
                C7.67 6.165 6 8.388 6 11v3.159
                c0 .538-.214 1.055-.595 1.436L4 17h5m6 0
                a3 3 0 11-6 0h6z" />
            </svg>
          </button>

          <% if (notificationsCount > 0) { %>
            <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs px-1.5 rounded-full">
              <%= notificationsCount || 90 %>
            </span>
          <% } %>
        </div>
        </header>

        <!-- MAIN CONTENT -->
<main class="flex-1 p-6">
  <!-- STATS -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="bg-white p-6 rounded-xl shadow">
      <p class="text-sm text-gray-500">Publishers</p>
      <p class="text-2xl font-bold"><%= stats.publishers %></p>
    </div>

    <div class="bg-white p-6 rounded-xl shadow">
      <p class="text-sm text-gray-500">Users</p>
      <p class="text-2xl font-bold"><%= stats.users %></p>
    </div>

    <div class="bg-white p-6 rounded-xl shadow">
      <p class="text-sm text-gray-500">Blogs</p>
      <p class="text-2xl font-bold"><%= stats.blogs %></p>
    </div>

    <div class="bg-white p-6 rounded-xl shadow">
      <p class="text-sm text-gray-500">Pending Reviews</p>
      <p class="text-2xl font-bold text-red-500"><%= stats.pending %></p>
    </div>
  </div>
</main>


        <!-- FOOTER -->


      </div>
    </div>
  </body>
</html>
