<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/head.ejs', { title }) %>

  <body class="bg-gray-50">
    <!-- Toast container -->
    <%- include("../../partials/toast.ejs") %>
    <div class="min-h-screen flex items-center justify-center px-4">
      <div class="w-full max-w-md">
        
        <!-- Brand -->
        <div class="mb-8 text-center">
          <h1 class="text-3xl font-bold text-gray-900"><%= pageTitle %></h1>
          <p class="mt-2 text-sm text-gray-500">
            Sign in to manage the platform
          </p>
        </div>

        <!-- Card -->
        <div class="rounded-2xl bg-white p-8 shadow-lg border border-gray-100">

          <form action="/publishers/auth/login" method="POST" class="space-y-6">
            
            <!-- Email -->
            <div>
              <label class="block text-sm font-medium text-gray-700">
                Email address
              </label>
              <input
                type="email"
                name="email"
                required
                placeholder="admin@example.com"
                class="mt-1 w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm focus:border-indigo-500 focus:ring-indigo-500"
              />
            </div>

            <!-- Password -->
            <div>
              <label class="block text-sm font-medium text-gray-700">
                Password
              </label>
              <input
                type="password"
                name="password"
                required
                placeholder="••••••••"
                class="mt-1 w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm focus:border-indigo-500 focus:ring-indigo-500"
              />
            </div>

            <!-- Actions -->
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <input
                  type="checkbox"
                  name="remember"
                  class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500"
                />
                <label class="ml-2 block text-sm text-gray-600">
                  Remember me
                </label>
              </div>

              <a
                href="/publishers/auth/forgot-password"
                class="text-sm font-medium text-indigo-600 hover:text-indigo-500"
              >
                Forgot password?
              </a>
            </div>

            <!-- Submit -->
            <button
              type="submit"
              class="w-full rounded-lg bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-indigo-700 transition"
            >
              Sign in
            </button>
          </form>
        </div>

        <!-- Footer -->
        <p class="mt-6 text-center text-xs text-gray-400">
          © <%= new Date().getFullYear() %> Your Company. All rights reserved.
        </p>
      </div>
    </div>
    <%- include('../../partials/toast-script.ejs') %>
  </body>
</html>
