<aside class="w-64 bg-white shadow-lg flex flex-col justify-between">
  <!-- SIDEBAR TOP -->
  <div class="p-6 border-b">
    <h1 class="text-2xl font-bold text-indigo-600">AdminPanel</h1>
  </div>

  <!-- SIDEBAR CENTER -->
  <nav class="flex-1 px-4 py-6 space-y-2">
    <a
      href="/admin/dashboard"
      class="block px-4 py-2 rounded-lg bg-indigo-50 text-indigo-600 font-semibold"
    >
      Dashboard
    </a>

    <a
      href="/admin/publishers"
      class="block px-4 py-2 rounded-lg text-gray-700 hover:bg-indigo-50 hover:text-indigo-600"
    >
      Manage Publishers
    </a>

    <a
      href="/admin/users"
      class="block px-4 py-2 rounded-lg text-gray-700 hover:bg-indigo-50 hover:text-indigo-600"
    >
      Manage Users
    </a>

    <a
      href="/admin/blogs"
      class="block px-4 py-2 rounded-lg text-gray-700 hover:bg-indigo-50 hover:text-indigo-600"
    >
      Manage Blogs
    </a>

    <a
      href="/admin/profile"
      class="block px-4 py-2 rounded-lg text-gray-700 hover:bg-indigo-50 hover:text-indigo-600"
    >
      Profile
    </a>
  </nav>
  <!-- SIDEBAR BOTTOM -->
  <!-- SIDEBAR BOTTOM -->
  <div class="p-4 border-t flex items-center justify-between gap-3">
    <!-- LEFT : PROFILE IMAGE + INFO -->
    <div class="flex items-center gap-3">
      <!-- IMAGE WRAPPER (IMPORTANT: relative) -->
      <div class="relative">
        <!-- Profile Image -->
        <img
          src="<%= admin.avatar %>"
          alt="Admin Avatar"
          class="w-10 h-10 rounded-full object-cover border"
        />

        <!-- ONLINE STATUS DOT -->
        <span
          class="absolute bottom-0 right-0 w-2.5 h-2.5 bg-green-500 border-2 border-white rounded-full"
        ></span>
      </div>

      <!-- Admin Info -->
      <div class="leading-tight">
        <p class="text-sm font-semibold"><%= admin.username %></p>
        <p class="text-xs text-gray-500 truncate max-w-[140px]"><%= admin.email %></p>
        <span class="inline-block mt-1 text-xs bg-indigo-100 text-indigo-600 px-2 py-0.5 rounded">
          <%= admin.role %>
        </span>
      </div>
    </div>

    <!-- RIGHT : LOGOUT -->
    <form action="/admin/auth/logout" method="POST">
      <button type="submit" class="text-red-500 hover:text-red-700 text-sm font-medium">
        Logout
      </button>
    </form>
  </div>
</aside>
