<script>
  document.addEventListener('DOMContentLoaded', () => {
    const backBtn = document.getElementById('backBtn');

    if (!backBtn) return;

    backBtn.addEventListener('click', () => {
      if (window.history.length > 1) {
        window.history.back();
      } else {
        window.location.replace('/authors/dashboard');
      }
    });
  });
</script>
