<!DOCTYPE html>
<html lang="en">
<%- include("../../partials/head.ejs", {title}) %>

<body class="bg-gray-100 min-h-screen flex items-center justify-center">
  <%- include("../../partials/toast.ejs") %>

  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">

    <!-- Logo -->
    <div class="text-center mb-6">
      <h1 class="text-3xl font-bold text-indigo-600">DevShala</h1>
      <p class="text-sm text-gray-500 mt-1">
        Welcome back, login to your account
      </p>
    </div>

    <!-- Login Form -->
    <form action="/users/auth/login" method="POST" class="space-y-4">

      <!-- Email -->
      <div>
        <label class="block text-sm font-medium mb-1">
          Email
        </label>
        <input
          type="email"
          name="email"
          required
          placeholder="Enter your email"
          class="w-full px-4 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none"
        />
      </div>

      <!-- Password -->
      <div>
        <label class="block text-sm font-medium mb-1">
          Password
        </label>
        <input
          type="password"
          name="password"
          required
          placeholder="Enter your password"
          class="w-full px-4 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none"
        />
      </div>

      <!-- Forgot password -->
      <div class="flex items-center justify-end">
        <a
          href="/users/auth/forgot-password"
          class="text-sm text-indigo-600 hover:underline"
        >
          Forgot password?
        </a>
      </div>

      <!-- Submit -->
      <button
        type="submit"
        class="w-full bg-indigo-600 text-white py-2 rounded-lg font-medium hover:bg-indigo-700 transition"
      >
        Login
      </button>

    </form>

    <!-- Divider -->
    <div class="my-6 flex items-center">
      <div class="flex-1 border-t"></div>
      <span class="px-3 text-sm text-gray-400">OR</span>
      <div class="flex-1 border-t"></div>
    </div>

    <!-- Register Redirect -->
    <p class="text-center text-sm text-gray-600">
      Donâ€™t have an account?
      <a href="/users/auth/register" class="text-indigo-600 font-medium hover:underline">
        Register
      </a>
    </p>

        <div
  class="mt-6 flex items-center justify-center gap-2
         rounded-lg bg-gray-50 px-4 py-3 text-sm text-gray-600"
>
  <svg class="h-4 w-4 text-indigo-500" fill="none" stroke="currentColor" stroke-width="2"
       viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round"
          d="M13 16h-1v-4h-1m1-4h.01M12 18a9 9 0 100-18 9 9 0 000 18z"/>
  </svg>

  <span>
    Access issues?
    <a href="/support" class="font-medium text-indigo-600 hover:underline">
      Reach our support team
    </a>
  </span>
</div>

  </div>

<%- include("../../partials/toast-script.ejs") %>
<%- include("../../partials/background.ejs") %>
</body>
</html>
