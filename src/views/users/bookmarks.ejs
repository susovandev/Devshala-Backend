<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Icons (Font Awesome CDN for now) -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />

    <style>
      body {
        font-family: 'Inter', sans-serif;
      }
    </style>
  </head>

  <body class="bg-gray-100 min-h-screen">
    <!-- TOAST START -->
    <div
  id="toast-container"
  class="fixed top-5 right-5 z-50 space-y-3"
>
  <% if (success && success.length) { %>
    <div
      class="toast flex items-center rounded-lg bg-green-600 px-4 py-3 text-white shadow-lg"
    >
      <span class="text-sm font-medium"><%= success[0] %></span>
    </div>
  <% } %>

  <% if (error && error.length) { %>
    <div
      class="toast flex items-center rounded-lg bg-red-600 px-4 py-3 text-white shadow-lg"
    >
      <span class="text-sm font-medium"><%= error[0] %></span>
    </div>
  <% } %>

  <% if (info && info.length) { %>
    <div
      class="toast flex items-center rounded-lg bg-blue-600 px-4 py-3 text-white shadow-lg"
    >
      <span class="text-sm font-medium"><%= info[0] %></span>
    </div>
  <% } %>
</div>

<!-- WRAPPER -->
    <div class="flex min-h-screen">
      <!-- SIDEBAR  START -->
      <aside class="w-64 bg-white shadow-lg flex flex-col justify-between">

  <!-- SIDEBAR TOP START-->
  <div class="p-6 border-b">
  <h1 class="text-2xl font-bold text-indigo-600"><%= pageTitle || 'UserPanel' %></h1>
</div>


  <!-- SIDEBAR CENTER START-->
  <!-- Navigation START -->
    <nav class="flex-1 px-4 py-6 space-y-2">
  <a
    href="/users/dashboard"
    class="block px-4 py-2 rounded-lg bg-indigo-50 text-indigo-600 font-semibold"
  >
    Dashboard
  </a>

  <a
    href="/users/profile"
    class="block px-4 py-2 rounded-lg text-gray-700 hover:bg-indigo-50 hover:text-indigo-600"
  >
    Profile
  </a>

  <a
    href="/users/replies"
    class="block px-4 py-2 rounded-lg text-gray-700 hover:bg-indigo-50 hover:text-indigo-600"
  >
    Replies
  </a>

  <a
    href="/users/bookmarks"
    class="block px-4 py-2 rounded-lg text-gray-700 hover:bg-indigo-50 hover:text-indigo-600"
  >
    Bookmarks
  </a>
</nav>


  <!-- SIDEBAR BOTTOM START -->
  <div class="p-4 border-t flex items-center justify-between gap-3">
  <!-- LEFT : PROFILE IMAGE + INFO -->
  <div class="flex items-center gap-3">
    <!-- IMAGE WRAPPER (IMPORTANT: relative) -->
    <div class="relative">
      <!-- Profile Image -->
      <img
        src="<%= user.avatarUrl.url || 'https://ui-avatars.com/api/?name=' + user.username + '&background=0D8ABC&color=fff' %>"
        alt="User Avatar"
        class="w-10 h-10 rounded-full object-cover border"
      />

      <!-- ONLINE STATUS DOT -->
      <span
        class="absolute bottom-0 right-0 w-2.5 h-2.5 bg-green-500 border-2 border-white rounded-full"
      ></span>
    </div>

    <!-- User Info -->
    <div class="leading-tight">
      <p class="text-sm font-semibold"><%= user.username %></p>
      <p class="text-xs text-gray-500 truncate max-w-[140px]"><%= user.email.slice(0, 12).concat('...') %></p>
      <span class="inline-block mt-1 text-xs bg-indigo-100 text-indigo-600 px-2 py-0.5 rounded">
        <%= user.role %>
      </span>
    </div>
  </div>

  <!-- RIGHT : LOGOUT -->
  <form action="/users/auth/logout" method="POST">
    <button type="submit" class="text-red-500 hover:text-red-700 text-sm font-medium bg-red-100 px-2 py-1 rounded">
      Logout
    </button>
  </form>
</div>

</aside>


      <!-- MAIN AREA -->
<div class="flex-1 flex flex-col">
        <!-- TOP BAR -->
        <header class="bg-white shadow-sm px-6 py-4 flex justify-between items-center">
        <h2 class="text-xl font-semibold text-gray-800">
          <span class="mr-2 rounded-full bg-indigo-50 px-4 py-1 text-sm font-semibold text-indigo-700"><%= user.username.toUpperCase() %></span> Bookmarks
        </h2>

        <!-- LOGOUT -->
        <div class="relative">
          <form action="/users/auth/logout" method="POST">
            <button type="submit" class="text-red-500 hover:text-red-700 text-sm font-medium bg-red-100 px-2 py-1 rounded">
              Logout
            </button>
          </form>
          
        </div>
        </header>

        <!-- MAIN CONTENT -->
<main class="flex-1 p-6">
  <!-- STATS -->
  <h1>Actual bookmark content here</h1>
</main>


        <!-- FOOTER -->
<footer class="bg-white border-t px-10 py-3">
  <div class="flex justify-between text-sm text-gray-500">
    <p>Â© <%= new Date().getFullYear() %> UsersPanel. All rights reserved.</p>
    <p class="text-xs">Logged in as <%= user.role %></p>
  </div>
</footer>


      </div>
    </div>

  </body>
</html>
