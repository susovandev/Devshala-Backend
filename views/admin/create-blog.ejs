<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>

  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
    rel="stylesheet"
  />

  <!-- Icons (Font Awesome CDN for now) -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
  />

  <!-- Include stylesheet -->
<link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css"   rel="stylesheet" />

  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
  <style>
    .stat-card {
  background: white;
  border-radius: 0.75rem;
  padding: 1.5rem;
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);
}

    .stat-label {
      @apply text-sm text-gray-500;
    }

    .stat-value {
      @apply text-2xl font-semibold text-gray-800 mt-1;
    }

    .btn-primary {
      @apply px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm hover:bg-indigo-700;
    }

    .btn-sm {
      @apply px-3 py-1 bg-indigo-50 text-indigo-600 rounded text-xs hover:bg-indigo-100;
    }
  </style>
  <style>
    @keyframes toast-in {
      from {
        opacity: 0;
        transform: translateX(30px) scale(0.95);
      }
      to {
        opacity: 1;
        transform: translateX(0) scale(1);
      }
    }

    @keyframes toast-out {
      from {
        opacity: 1;
        transform: translateX(0) scale(1);
      }
      to {
        opacity: 0;
        transform: translateX(30px) scale(0.95);
      }
    }

    .animate-toast-in {
      animation: toast-in 0.45s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .animate-toast-out {
      animation: toast-out 0.4s ease-in forwards;
    }
  </style>
</head>


<body class="bg-gray-100 min-h-screen">
  <%- include("../partials/toast.ejs") %>
  <div class="flex min-h-screen">

    <!-- SIDEBAR -->
  <%- include("./components/sidebar.ejs", {currentPath, admin, pageTitle}) %>


    <!-- MAIN AREA -->
    <div class="flex-1 flex flex-col">

      <!-- HEADER -->
<%- include("./components/main-header.ejs", {admin, totalUnreadNotifications, totalNotifications, notifications}) %>


      <!-- MAIN CONTENT -->
      <main class="flex-1 p-6">
  <!-- PAGE HEADER -->
<div class="flex items-center justify-between mb-8">
  <div>
    <h1 class="text-2xl font-bold text-gray-900 flex items-center gap-2">
      ‚úçÔ∏è Create New Blog
    </h1>
    <p class="text-sm text-gray-500 mt-1">
      Your blog will be reviewed before publishing
    </p>
  </div>

  <a
    href="/admins/blogs"
    class="text-sm font-medium text-gray-600 hover:text-indigo-600 flex items-center gap-2"
  >
    ‚Üê Back to Blogs
  </a>
</div>

<!-- FORM -->
<form
  action="/admins/blogs/create"
  method="POST"
  enctype="multipart/form-data"
  class="grid grid-cols-1 lg:grid-cols-3 gap-8"
>

  <!-- LEFT: CONTENT -->
  <div class="lg:col-span-2 space-y-6">

    <!-- TITLE -->
    <div class="bg-white rounded-xl shadow-sm p-6">
      <label class="block text-sm font-semibold text-gray-700 mb-2">
        Blog Title
      </label>
      <input
        type="text"
        name="title"
        required
        placeholder="Write a clear, SEO-friendly title"
        class="w-full text-lg font-medium border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-indigo-500"
      />
    </div>

    <!-- EXCERPT -->
    <div class="bg-white rounded-xl shadow-sm p-6">
      <label class="block text-sm font-semibold text-gray-700 mb-2">
        Short Excerpt
      </label>
      <textarea
        name="excerpt"
        rows="3"
        required
        placeholder="Brief summary shown in blog listings"
        class="w-full border border-gray-300 rounded-lg px-4 py-3 text-sm focus:ring-2 focus:ring-indigo-500"
      ></textarea>
    </div>

    <!-- CONTENT -->
    <div class="bg-white rounded-xl shadow-sm p-6">
      <label class="block text-sm font-semibold text-gray-700 mb-2">
        Blog Content
      </label>
      <div id="editor" class="h-96"></div>
      <textarea name="content" id="content" hidden></textarea>

      <p class="text-xs text-gray-400 mt-2">
        You can use Markdown or HTML formatting
      </p>
    </div>

  </div>

  <!-- RIGHT: SETTINGS -->
  <aside class="space-y-6">

    <!-- COVER IMAGE -->
    <div class="bg-white rounded-xl shadow-sm p-6">
      <label class="block text-sm font-semibold text-gray-700 mb-3">
        Cover Image
      </label>
      <input
        type="file"
        name="coverImage"
        accept="image/*"
        class="block w-full text-sm text-gray-600
               file:mr-4 file:py-2 file:px-4
               file:rounded-md file:border-0
               file:text-sm file:font-medium
               file:bg-indigo-50 file:text-indigo-600
               hover:file:bg-indigo-100"
      />
    </div>

    <!-- CATEGORIES -->
    <div class="bg-white rounded-xl shadow-sm p-6">
      <label class="block text-sm font-semibold text-gray-700 mb-3">
        Categories
      </label>

      <div class="space-y-2 max-h-48 overflow-y-auto pr-1">
        <% categories.forEach(cat => { %>
          <label class="flex items-center gap-2 text-sm text-gray-700">
            <input
              type="checkbox"
              name="categories[]"
              value="<%= cat._id %>"
              class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500"
            />
            <%= cat.name %>
          </label>
        <% }) %>
      </div>
    </div>

    <!-- TAGS -->
    <div class="bg-white rounded-xl shadow-sm p-6">
      <label class="block text-sm font-semibold text-gray-700 mb-2">
        Tags
      </label>
      <input
        id="tags"
        type="text"
        name="tags"
        placeholder="backend, nodejs, mongodb"
        class="w-full border border-gray-300 rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-indigo-500"
      />
      <p class="text-xs text-gray-400 mt-2">
        Separate tags with commas
      </p>
    </div>

    <!-- INFO -->
    <div class="rounded-xl border border-yellow-200 bg-yellow-50 p-4 text-sm text-yellow-700">
      <div class="flex items-start gap-2">
        <i class="fa-solid fa-clock mt-0.5"></i>
        <p>
          Your blog will be reviewed by the publisher & admin before going live.
        </p>
      </div>
    </div>

    <!-- SUBMIT -->
    <button
      type="submit"
      class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 rounded-xl transition shadow-sm"
    >
      üöÄ Submit
    </button>

  </aside>
</form>

</main>

<%- include("./components/footer.ejs", {admin}) %>

    </div>
  </div>
    <%- include('../partials/toast-script.ejs') %>
    <%- include("./components/icon-hover.ejs") %>
    <%- include("./components/back-button.ejs") %>
    <%- include("./components/real-time.ejs") %>

    <script src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>
    <script>
  document.addEventListener('DOMContentLoaded', () => {

  const form = document.querySelector('form');
  const contentInput = document.querySelector('#content');

  const quill = new Quill('#editor', { theme: 'snow' });

  quill.on('text-change', () => {
    contentInput.value = quill.root.innerHTML;
  });

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);

    // Re-handle categories safely
    formData.delete('categories[]');
    const categories = Array.from(
      document.querySelectorAll('.category-checkbox:checked')
    ).map(el => el.value);

    categories.forEach(id => formData.append('categories[]', id));

    // Normalize tags
    formData.delete('tags');
    const tags = document.querySelector('#tags').value
      .split(',')
      .map(t => t.trim())
      .filter(Boolean);

    tags.forEach(tag => formData.append('tags[]', tag));

    try {
      const res = await fetch('/admins/blogs/create', {
        method: 'POST',
        body: formData,
      });

      if (!res.ok) throw new Error('Submit failed');
      window.location.href = '/admins/blogs';
    } catch (err) {
      console.error(err);
    }
  });
});
</script>


</body>
</html>
