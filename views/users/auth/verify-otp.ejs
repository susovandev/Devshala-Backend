<!DOCTYPE html>
<html lang="en">
<%- include("../../partials/head.ejs", {title}) %>

<body class="bg-gray-100 min-h-screen flex items-center justify-center">
  <%- include("../../partials/toast.ejs") %>

  <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">

    <!-- Logo -->
    <div class="text-center mb-6">
      <h1 class="text-3xl font-bold text-indigo-600">DevShala</h1>
      <p class="text-sm text-gray-500 mt-1">
        Verify your account
      </p>
    </div>
    
    <!-- OTP Form -->
    <form action="/users/auth/verify-otp" method="POST" class="space-y-4">

      <!-- User ID from query -->
      <input
        type="hidden"
        name="userId"
        value="<%= userId %>"
      />

      <!-- OTP -->
      <div>
        <label class="block text-sm font-medium mb-1">
          One-Time Password (OTP)
        </label>
        <input
          type="text"
          name="otp"
          required
          maxlength="6"
          placeholder="Enter 6-digit OTP"
          class="w-full text-center tracking-widest px-4 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none"
        />
      </div>

      <!-- Submit -->
      <button
        type="submit"
        class="w-full bg-indigo-600 text-white py-2 rounded-lg font-medium hover:bg-indigo-700 transition"
      >
        Verify OTP
      </button>

    </form>

    <!-- Resend OTP -->
    <div class="text-center mt-6">
      <p class="text-sm text-gray-600">
        Didnâ€™t receive the OTP?
      </p>
      <a
        href="/users/auth/resend-otp"
        class="text-indigo-600 font-medium text-sm hover:underline"
      >
        Resend OTP
      </a>
    </div>

    <!-- Back to Login -->
    <p class="text-center text-sm text-gray-600 mt-4">
      Back to
      <a href="/users/auth/login" class="text-indigo-600 font-medium hover:underline">
        Login
      </a>
    </p>

  </div>

<%- include("../../partials/toast-script.ejs") %>
<%- include("../../partials/background.ejs") %>
</body>
</html>
